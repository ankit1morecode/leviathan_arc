<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Leviathan Dashboard</title>

  <!-- âœ… Production-safe animation library -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <!-- âœ… Your main styles -->
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <div class="container animate__animated animate__fadeIn">

    <!-- HEADER -->
    <header class="dash-header">
      <div class="dash-title">
        <span class="logo">âš™</span>
        <div>
          <h1>Leviathan ARC</h1>
          <p class="subtitle">Autonomous Robotics Command Dashboard</p>
        </div>
      </div>

      <div class="dash-status">
        <span class="status-dot online"></span>
        <span class="status-text">SYSTEM ONLINE</span>
      </div>
    </header>

    <!-- NAVIGATION (Map + Camera) -->
    <div class="dashboard-nav">
      <a href="/map" class="btn-nav">ğŸ—º Live Map</a>
      <a href="/camera" class="btn-nav btn-camera">ğŸ“· Camera</a>
    </div>

    <!-- METRICS -->
    <div class="cards">
      <div class="card">
        <h2>Robot ID</h2>
        <p id="robotId">--</p>
      </div>

      <div class="card">
        <h2>Temperature</h2>
        <p>
          <span id="temp">--</span> <span class="unit">Â°C</span>
        </p>
      </div>

      <div class="card">
        <h2>Last Update</h2>
        <p id="time">--</p>
      </div>

      <div class="card">
        <h2>Distance Travelled</h2>
        <p id="distance">0 m</p>
      </div>

      <div class="card">
        <h2>Humidity</h2>
        <p id="humidity">--</p>
      </div>
    </div>

    <!-- SENSORS -->
    <div class="sensor-grid">

      <div class="card">
        <h2>Speed</h2>
        <p id="speed">0 km/h</p>
      </div>

      <div class="card">
        <h2>Gas Sensor</h2>
        <p><b>Raw:</b> <span id="gasRaw">--</span></p>
        <!-- <p><b>Voltage:</b> <span id="gasVoltage">--</span> V</p> -->
        <p><b>Status:</b> <span id="gasStatus">NO_DATA</span></p>
      </div>
    </div>

    <!-- MAIN ACTION BUTTONS -->
    <div class="dashboard-actions">
      <button id="btnStart" class="btn-primary">â–¶ Start Mission</button>
      <button id="btnRTB" class="btn-secondary">ğŸ  Return to Base</button>
      <button id="btnStop" class="btn-danger">â›” Emergency Stop</button>
    </div>

    <!-- LOGS -->
    <div class="logs-section">
      <h3>Live Data Logs</h3>
      <div id="logs" class="logs"></div>
    </div>
  </div>

  <!-- âœ… Socket.IO -->
  <script src="/socket.io/socket.io.js"></script>

  <!-- âœ… Dashboard logic -->
  <script type="module" src="/js/main.js"></script>
</body>

</html>